# Premier ERP System Environment Configuration Example
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://erp_user:your_password@localhost:5432/premier_erp
POSTGRES_PASSWORD=your_secure_password

# Application Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=https://your-domain.com

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_session_secret_here

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# External API Keys (optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_key
SENDGRID_API_KEY=SG.your_sendgrid_key

# Egyptian Tax Authority (ETA) Configuration
ETA_CLIENT_ID=your_eta_client_id
ETA_CLIENT_SECRET=your_eta_client_secret
ETA_API_URL=https://api.eta.gov.eg

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn